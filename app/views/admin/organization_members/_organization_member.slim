tr
  td
    - if organization_member.admin?
      strong= organization_member.user_name
    - else
      = organization_member.user_name
  td
    - organization = organization_member.organization
    = link_to [:toggle_admin, :admin, organization, organization_member], \
              class: 'toggle_admin', data: { method: 'patch' } do
      span.icon-check(class='#{organization_member.admin? ? 'active' : 'inactive'}')
