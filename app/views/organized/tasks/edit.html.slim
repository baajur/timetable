- content_for :heading do
  .row.mt-2
    .col
      nav(aria-label='breadcrumb' role='navigation')
        ol.breadcrumb
          li.breadcrumb-item= link_to current_organization.name, current_organization
          li.breadcrumb-item= link_to 'Tasks', organization_tasks_path
          li.breadcrumb-item.active(aria-current='page')= "Edit Task #{@task.slug}"

.row
  .col
    h4= "Edit Task #{@task.slug}"

.row.mt-2
  .col= render 'form'
