= f.hidden_field :user_id
- if f.object.user != current_user
  .row.form-group
    = f.label :user_name, class: 'col-sm-2 col-form-label'
    .col-sm-10
      = f.text_field :user_name, class: 'form-control-plaintext', readonly: ''
.row.form-group
  = f.label :executed_on, class: 'col-sm-2 col-form-label'
  .col-sm-10
    - if f.object.persisted?
      = f.date_field :executed_on, class: 'form-control'
      small.form-text.text-danger= f.object.errors[:executed_on].join ', '
    - else
      = f.date_field :executed_on, class: 'form-control-plaintext', readonly: ''
.row.form-group
  = f.label :project_id, class: 'col-sm-2 col-form-label'
  .col-sm-10
    = f.collection_select :project_id, @projects, :id, :full_name, {}, \
                          class: 'form-control', \
                          data: { fetch_api: organization_project_path(current_organization, ':project') }
    small.form-text.text-danger= f.object.errors[:project_id].join ', '
.row.form-group
  = f.label :task_id, class: 'col-sm-2 col-form-label'
  .col-sm-10
    = f.collection_select :task_id, @tasks, :id, :name, {}, \
                          class: 'form-control'
    small.form-text.text-danger= f.object.errors[:task_id].join ', '
.row.form-group
  = f.label :notes, class: 'col-sm-2 col-form-label'
  .col-sm-10
    = f.text_area :notes, class: 'form-control'
    small.form-text.text-danger= f.object.errors[:notes].join ', '
.row.form-group
  = f.label :time_amount, class: 'col-sm-2 col-form-label'
  .col-sm-10
    = f.text_field :time_amount, class: 'form-control', placeholder: '0:00', autocomplete: 'off'
    small.form-text.text-muted Allowed formats: <code>1</code> for 1 hours, <code>1.5</code> or <code>1:30</code> for 1.5 hours
    small.form-text.text-danger= f.object.errors[:amount].join ', '
.row.justify-content-end
  .col-sm-10
    = f.submit class: 'btn btn-primary'

