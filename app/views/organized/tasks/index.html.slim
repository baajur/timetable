- content_for :heading do
  .row.mt-2
    .col
      nav(aria-label='breadcrumb' role='navigation')
        ol.breadcrumb
          li.breadcrumb-item= link_to current_organization.name, current_organization
          li.breadcrumb-item.active(aria-current='page') Tasks

.row.align-items-center
  .col
    h4 Tasks
  .col.text-right
    = link_to new_organization_task_path, class: 'btn btn-primary' do
      i.icon-plus

.row.mt-2
  .col
    table.table
      thead
        tr
          th Name
          th &nbsp;
      tbody= render @tasks
      tfoot
        tr
          td(colspan=2)= paginate @tasks
